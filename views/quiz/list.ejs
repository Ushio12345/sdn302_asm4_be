<button
  class="btn btn-primary mb-3"
  onclick="window.location='/quizzes/create'"
>
  Create new quiz
</button>

<section>
  <% if (quizzes && quizzes.length > 0) { %> <% quizzes.forEach(function(quiz) {
  %>
  <div
    class="quiz-item p-3 mb-3 border d-flex justify-content-between align-items-center"
  >
    <p
      class="text-black mb-0"
      onclick="window.location='/quizzes/<%= quiz._id %>'"
    >
      <strong><%= quiz.title %></strong>
    </p>

    <div class="d-flex align-items-center">
      <div class="me-2">
        <button
          onclick='window.location="/quizzes/<%= quiz._id %>/edit"'
          class="btn btn-sm btn-warning"
        >
          Edit Quiz
        </button>
      </div>

      <div>
        <form
          action="/quizzes/<%= quiz._id %>?_method=DELETE"
          method="POST"
          onClick="event.stopPropagation()"
          onsubmit="return confirm('Bạn có chắc chắn muốn xóa quiz: <%= quiz.title %> không?')"
        >
          <button type="submit" class="btn btn-sm btn-danger text-white">
            Delete
          </button>
        </form>
      </div>
    </div>
  </div>
  <% }) %> <% } else { %>
  <p>Chưa có quiz nào.</p>
  <% } %>
</section>
