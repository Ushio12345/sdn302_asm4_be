<h2>User List</h2>

<table class="table table-striped table-bordered mt-3">
  <thead>
    <tr>
      <th>#</th>
      <th>User ID</th>
      <th>User Name</th>
      <th>Role</th>
    </tr>
  </thead>

  <tbody>
    <% if (users.length === 0) { %>
    <tr>
      <td colspan="4" class="text-center">No users found.</td>
    </tr>
    <% } else { %> <% users.forEach((u, index) => { %>
    <tr>
      <td><%= index + 1 %></td>
      <td><%= u._id %></td>
      <td><%= u.userName %></td>
      <td><%= u.isAdmin ? "Admin" : "User" %></td>
    </tr>
    <% }) %> <% } %>
  </tbody>
</table>
